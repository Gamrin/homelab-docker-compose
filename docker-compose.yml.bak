---
version: "3.2"
include:
  #- ${DOCKERDATAPATH}immich/docker-compose-immich.yml
  - /home/sander/homelab-docker-compose/docker-compose-paperlessngx.yml

services:
########################################################
# Media Management
########################################################

# Video
  radarr:
    image: lscr.io/linuxserver/radarr:latest
    container_name: radarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Amsterdam
    volumes:
      - ${DOCKERDATAPATH}radarr/config:/config
      - /mnt/films:/movies #optional
      - /mnt/downloads/UsenetDownloads:/downloads #optional
    ports:
      - 7878:7878
    restart: unless-stopped
  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Amsterdam
    volumes:
      - ${DOCKERDATAPATH}sonarr/config:/config
      - /mnt/anime:/anime #optional
      - /mnt/series:/series #optional
      - /mnt/cartoons:/cartoons #optional
      - /mnt/downloads/UsenetDownloads:/downloads #Downloads Directory
    ports:
      - 8989:8989
    restart: unless-stopped
  sonarrNL:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarrNL
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Amsterdam
    volumes:
      - ${DOCKERDATAPATH}sonarrNL/config:/config
      - /mnt/anime:/anime #optional
      - /mnt/series:/series #optional
      - /mnt/cartoons:/cartoons #optional
      - /mnt/downloads/UsenetDownloads:/downloads #Downloads Directory
    ports:
      - 8990:8989
    restart: unless-stopped
  overseerr:
    image: lscr.io/linuxserver/overseerr:latest
    container_name: overseerr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Amsterdam
    volumes:
      - ${DOCKERDATAPATH}overseerr/config:/config
    ports:
      - 5055:5055
    restart: unless-stopped
  readarr:
    image: lscr.io/linuxserver/readarr:develop
    container_name: readarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Amsterdam
    volumes:
      - ${DOCKERDATAPATH}readarr/config:/config
      - /mnt/ebooks:/ebooks
      - /mnt/downloads/UsenetDownloads:/downloads
    ports:
      - 8787:8787
    restart: unless-stopped
  plex:
    image: lscr.io/linuxserver/plex:latest
    container_name: plex
    network_mode: host
    environment:
      - PUID=1000
      - PGID=1000
      - PLEX_UID=1000
      - GROUP_UID=1000
      - TZ=Europe/Amsterdam
      - VERSION=docker
      - PLEX_CLAIM= #optional
    volumes:
      - ${DOCKERDATAPATH}plex/config:/config
      - /mnt/series:/tv
      - /mnt/anime:/anime
      - /mnt/cartoons:/cartoons
      - /mnt/films:/films
    restart: unless-stopped  
  bazarr:
    image: lscr.io/linuxserver/bazarr:latest
    container_name: bazarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Amsterdam
    volumes:
      - ${DOCKERDATAPATH}bazarr/config:/config
      - /mnt/anime:/anime
      - /mnt/series:/series
      - /mnt/cartoons:/cartoons
      - /mnt/films:/movies
      - /mnt/downloads/UsenetDownloads:/downloads
    ports:
      - 6767:6767
    restart: unless-stopped
# Images


######################################################## 
# Downloading
########################################################

  tubesync:
    image: ghcr.io/meeb/tubesync:latest
    container_name: tubesync
    restart: unless-stopped
    ports:
      - 4848:4848
    volumes:
      - ${DOCKERDATAPATH}tubesync/config:/config
      - /mnt/youtubesync:/downloads
    environment:
      - TZ=Europe/Amsterdam
      - PUID=1000
      - PGID=1000
  
  nzbget:
    image: lscr.io/linuxserver/nzbget:latest
    container_name: nzbget
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Amsterdam
      - NZBGET_USER=${NZBGET_USER} #optional
      - NZBGET_PASS=${NZBGET_PASS} #optional
    volumes:
      - ${DOCKERDATAPATH}nzbget/data:/config
      - /mnt/downloads/UsenetDownloads:/downloads #optional
    ports:
      - 6789:6789
    restart: unless-stopped
  qbittorrent:
    image: lscr.io/linuxserver/qbittorrent:latest
    container_name: qbittorrent
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - WEBUI_PORT=8081
    volumes:
      - ${DOCKERDATAPATH}qbittorrent/config:/config
      - /mnt/downloads/TorrentDownloads:/downloads
    ports:
      - 8081:8081
      - 6881:6881
      - 6881:6881/udp
    restart: unless-stopped
    
########################################################
# Homepages, Dashboards and Monitoring 
########################################################

  homepage:
    image: ghcr.io/gethomepage/homepage:latest
    container_name: homepage
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    ports:
      - 3000:3000
    volumes:
      - ${DOCKERDATAPATH}homepage/config:/app/config # Make sure your local config directory exists
      - /var/run/docker.sock:/var/run/docker.sock # (optional) For docker integrations
      - /mnt/anime:/anime #optional
      - /mnt/series:/series #optional
      - /mnt/cartoons:/cartoons
      - /mnt/films:/films #optional
      - /mnt/downloads:/downloads
    restart: unless-stopped
  grafana:
    image: grafana/grafana
    container_name: grafana
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    ports:
      - 3001:3000
    volumes:
      - ${DOCKERDATAPATH}grafana:/var/lib/grafana
    restart:
      always 
      
########################################################
# Networking
########################################################
  
  nginxProxyManager:
    container_name: nginxProxyManager
    image: 'jc21/nginx-proxy-manager:latest'
    restart: unless-stopped
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    ports:
      # These ports are in format <host-port>:<container-port>
      - '80:80' # Public HTTP Port
      - '443:443' # Public HTTPS Port
      - '81:81' # Admin Web Port
      # Add any other Stream port you want to expose
      # - '21:21' # FTP

    # Uncomment the next line if you uncomment anything in the section
    # environment:
      # Uncomment this if you want to change the location of 
      # the SQLite DB file within the container
      # DB_SQLITE_FILE: "/data/database.sqlite"

      # Uncomment this if IPv6 is not enabled on your host
      # DISABLE_IPV6: 'true'

    volumes:
      - ${DOCKERDATAPATH}NPM/data:/data
      - ${DOCKERDATAPATH}NPM//letsencrypt:/etc/letsencrypt
# UNIFI
  unifi-network-application:
    image: lscr.io/linuxserver/unifi-network-application:latest
    container_name: unifi-network-application
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - MONGO_USER=${MONGO_USER}
      - MONGO_PASS=${MONGO_PASS}
      - MONGO_HOST=unifi-db
      - MONGO_PORT=27017
      - MONGO_DBNAME=unifi
      - MEM_LIMIT=1024 #optional
      - MEM_STARTUP=1024 #optional
      # - MONGO_TLS= #optional
      # - MONGO_AUTHSOURCE= #optional
    volumes:
      - ${DOCKERDATAPATH}unifi-network-application/config:/config
    ports:
      - 8443:8443
      - 3478:3478/udp
      - 10001:10001/udp
      - 8080:8080
      - 1900:1900/udp #optional
      - 8843:8843 #optional
      - 8880:8880 #optional
#      - 6789:6789 #optional
      - 5514:5514/udp #optional
    restart: unless-stopped

  unifi-db:
    image: docker.io/mongo:4.4
    container_name: unifi-db
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    volumes:
      - ${DOCKERDATAPATH}unifi-db/data:/data/db
      - ${DOCKERDATAPATH}unifi-db/init-mongo.js:/docker-entrypoint-initdb.d/init-mongo.js:ro
    restart: unless-stopped

  netbootxyz:
    image: ghcr.io/netbootxyz/netbootxyz
    container_name: netbootxyz
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - MENU_VERSION=2.0.47 # optional
      - NGINX_PORT=80 # optional
      - WEB_APP_PORT=3000 # optional
      - PORT_RANGE=30000:30010 #optional
      - SUBFOLDER=/ #optional

    volumes:
      - ${DOCKERDATAPATH}netbootxyz/config:/config # optional
      - ${DOCKERDATAPATH}netbootxyz/assets:/assets # optional
    ports:
      - 3020:3000  # optional, destination should match ${WEB_APP_PORT} variable above.
      - 69:69/udp
      - 8082:80  # optional, destination should match ${NGINX_PORT} variable above.
    restart: unless-stopped

